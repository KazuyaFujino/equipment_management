<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>分類</th>
      <th>備品名</th>
      <th>備考</th>
      <th>保管場所</th>
      <th>Item img</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= @categories.find(item.category_id).category_name %></td>
        <td><%= item.name %></td>
        <td><%= item.overview %></td>
        <td><%= item.address %></td>
        <td><%= item.item_img %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

